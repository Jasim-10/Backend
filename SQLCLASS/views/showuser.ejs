<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All user</title>
    <style>
        table,th,td{
            margin: 10px;
            padding: 10px;
            border: 1px solid black;
            border-collapse: collapse;
        }
    </style>
</head>
<body>
    <table>
        <tr>
            <th>Id</th>
            <th>Email</th>
            <th>Username</th>
            <th>age</th>
            <th>password</th>
            <th>Update Username</th>
        </tr>
        <%for(user of users){ %>
        <tr>
            <td><%=user.id%></td>
            <td><%=user.email%></td>
            <td><%=user.name%></td>
            <td><%=user.age%></td>
            <td><%=user.password%></td>
            <td>
                 <form action="/user/<%=user.id%>/edit" method="GET">
                <button>Edit Username</button>
            </form>
            </td>
        </tr>
        <% } %>
    </table>
</body>
</html>

